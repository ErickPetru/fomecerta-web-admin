{
  "functions": {
    "source": "functions"
  },
  "hosting": {
    "predeploy": [
      "npm run generate",
      "rm -rf public && mkdir public",
      "cp -a src/dist/. public/"
    ],
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
